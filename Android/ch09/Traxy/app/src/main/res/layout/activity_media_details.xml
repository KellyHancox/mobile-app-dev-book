<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gvsu.cis.traxy.MediaDetailsActivity">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/traxy_logo"
        android:id="@+id/frameLayout">
        <ImageView
            android:id="@+id/journal_entry_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
        <VideoView
            android:id="@+id/journal_entry_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </FrameLayout>

    <EditText
        android:id="@+id/journal_entry_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:drawableEnd="@drawable/ic_expand_more_black_24dp"
        android:ems="10"
        android:hint="@string/journal_entry_date"
        android:inputType="date"
        android:padding="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"/>

    <EditText
        android:id="@+id/journal_entry_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:drawableEnd="@drawable/ic_expand_more_black_24dp"
        android:ems="10"
        android:hint="@string/journal_entry_time"
        android:inputType="time"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/journal_entry_date"
        app:layout_constraintRight_toRightOf="@+id/journal_entry_date"
        app:layout_constraintTop_toBottomOf="@+id/journal_entry_date"/>

    <EditText
        android:id="@+id/journal_entry_loc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="7dp"
        android:background="@android:color/white"
        android:drawableEnd="@drawable/ic_near_me_black_24dp"
        android:ems="10"
        android:hint="@string/journal_entry_location"
        android:inputType="textPostalAddress"
        android:padding="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/journal_entry_time"
        app:layout_constraintRight_toRightOf="@+id/journal_entry_time"
        app:layout_constraintTop_toBottomOf="@+id/journal_entry_time"/>

    <EditText
        android:id="@+id/journal_entry_caption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/journal_entry_caption"
        android:inputType="textMultiLine"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="@+id/journal_entry_loc"
        app:layout_constraintRight_toRightOf="@+id/journal_entry_loc"
        app:layout_constraintTop_toBottomOf="@+id/journal_entry_loc"
        app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
