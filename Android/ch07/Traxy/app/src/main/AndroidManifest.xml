<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gvsu.cis.traxy">

    <application
        android:name="edu.gvsu.cis.traxy.TraxyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="edu.gvsu.cis.traxy.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.gvsu.cis.traxy.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="edu.gvsu.cis.traxy.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.gvsu.cis.traxy.LoginActivity" />
        </activity>
        <activity
            android:name="edu.gvsu.cis.traxy.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.gvsu.cis.traxy.JournalViewActivity"
            android:label="@string/title_activity_journal_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.gvsu.cis.traxy.NewJournalActivity"
            android:label="@string/title_activity_new_journal"
            android:parentActivityName="edu.gvsu.cis.traxy.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.gvsu.cis.traxy.MainActivity" />
        </activity>
    </application>

</manifest>
